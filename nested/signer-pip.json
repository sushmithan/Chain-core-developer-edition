{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "signerPipSettings": {
      "type": "object"
    },
    "location": {
      "type": "string"
    }
  },
  "variables": {
    "signerVMIpName": "[parameters('signerPipSettings').signerVMIpName]",
    "signer_nodes_Count": "[parameters('signerPipSettings').signer_nodes_Count]",
    "signerPipDns": "[parameters('signerPipSettings').signerPipDns]",
    "apiVersion": "[parameters('signerPipSettings').apiVersion]",
    "publicIPAllocationMethod": "[parameters('signerPipSettings').publicIPAllocationMethod]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(variables('signerVMIpName'),'-',copyIndex(1))]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "signerLoop",
        "count": "[variables('signer_nodes_Count')]"
      },
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIPAllocationMethod')]",
        "idleTimeoutInMinutes": 4,
        "dnsSettings": {
          "domainNameLabel": "[concat(variables('signerPipDns'),'-',copyIndex(1))]"
        }
      },
      "dependsOn": []
    }
  ]
}
