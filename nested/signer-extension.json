{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "signerExtensionSettings": {
            "type": "object"
        },
        "generatorIp": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "apiVersion": "[parameters('signerExtensionSettings').apiVersion]",
        "signerVmName": "[concat(parameters('signerExtensionSettings').signerVmName,'-',parameters('location'))]",
        "signerScriptUrl": "[parameters('signerExtensionSettings').signerScriptUrl]",
        "signerScriptFileName": "[parameters('signerExtensionSettings').signerScriptFileName]",
        "generatorIp": "[parameters('generatorIp')]",
        "servicePrincipal": "[parameters('signerExtensionSettings').servicePrincipal]",
        "secretKey": "[parameters('signerExtensionSettings').secretKey]",
        "tenantId": "[parameters('signerExtensionSettings').tenantId]",
        "subscriptionId": "[parameters('signerExtensionSettings').subscriptionId]",
        "keyVaultName": "[parameters('signerExtensionSettings').keyVaultName]",
        "tokenName": "[parameters('signerExtensionSettings').tokenName]",
        "nodeCount": "[parameters('signerExtensionSettings').nodeCount]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('signerVmName'),'-',copyIndex(1), '/signerConfig')]",
            "location": "[parameters('location')]",
            "apiVersion": "[variables('apiVersion')]",
            "copy": {
                "name": "signerLoop",
                "count": "[variables('nodeCount')]"
            },
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[variables('signerScriptUrl')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('sh ', variables('signerScriptFileName'), ' \"', variables('generatorIp'), '\" \"', variables('servicePrincipal'), '\" \"', variables('secretKey'), '\" \"', variables('tenantId'), '\" \"', variables('subscriptionId'), '\" \"', variables('keyVaultName'), '\" \"', variables('tokenName'),'\" \"',copyIndex(1), '\"')]"
                }
            }
        }
    ]
}