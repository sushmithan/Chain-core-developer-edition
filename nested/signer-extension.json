{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "signerExtensionSettings": {
            "type": "object"
        },
        "generatorIp": {
            "type": "string"
        }
    },
    "variables": {
        "apiVersion": "[parameters('signerExtensionSettings').apiVersion]",
        "location": "[parameters('signerExtensionSettings').location]",
        "signerVmName": "[parameters('signerExtensionSettings').signerVmName]",
        "signerScriptUrl": "[parameters('signerExtensionSettings').signerScriptUrl]",
        "signerScriptFileName": "[parameters('signerExtensionSettings').signerScriptFileName]",
        "generatorIp": "[parameters('generatorIp')]",
        "servicePrinciple": "[parameters('signerExtensionSettings').servicePrinciple]",
        "secretKey": "[parameters('signerExtensionSettings').secretKey]",
        "tenantId": "[parameters('signerExtensionSettings').tenantId]",
        "subscriptionId": "[parameters('signerExtensionSettings').subscriptionId]",
        "keyVaultName": "[parameters('signerExtensionSettings').keyVaultName]",
        "signerTokenName": "[parameters('signerExtensionSettings').signerTokenName]",
        "signer_nodes_Count": "[parameters('signerExtensionSettings').signer_nodes_Count]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('signerVmName'),'-',copyIndex(1), '/signerConfig')]",
            "location": "[variables('location')]",
            "apiVersion": "[variables('apiVersion')]",
            "copy": {
                "name": "signerLoop",
                "count": "[variables('signer_nodes_Count')]"
            },
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[variables('signerScriptUrl')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('sh ', variables('signerScriptFileName'), ' \"', variables('generatorIp'), '\" \"', variables('servicePrinciple'), '\" \"', variables('secretKey'), '\" \"', variables('tenantId'), '\" \"', variables('subscriptionId'), '\" \"', variables('keyVaultName'), '\" \"', variables('signerTokenName'),copyIndex(1), '\"')]"
                }
            }
        }
    ]
}