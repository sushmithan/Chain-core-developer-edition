{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "signerVMsettings": {
            "type": "object"
        }
    },
    "variables": {
        "suffix": "[concat(parameters('signerVMsettings').suffix)]",
        "apiVersion": "[concat(parameters('signerVMsettings').apiVersion)]",
        "availabilitySetsName": "[concat(parameters('signerVMsettings').availabilitySetsName)]",
        "signerNicName": "[concat(parameters('signerVMsettings').signerNicName)]",
        "signerVmName": "[concat(parameters('signerVMsettings').signerVmName)]",
        "location": "[parameters('signerVMsettings').location]",
        "signer_nodes_Count": "[parameters('signerVMsettings').signer_nodes_Count]",
        "adminUsername": "[parameters('signerVMsettings').adminUsername]",
        "adminPassword": "[parameters('signerVMsettings').adminPassword]",
        "signerVmSize": "[parameters('signerVMsettings').signerVmSize]",
        "storageAccountType": "[parameters('signerVMsettings').storageAccountType]",
        "publisher": "[parameters('signerVMsettings').publisher]",
        "offer": "[parameters('signerVMsettings').offer]",
        "sku": "[parameters('signerVMsettings').sku]",
        "version": "[parameters('signerVMsettings').version]",
        "diskSizeGB": "[parameters('signerVMsettings').diskSizeGB]",
        "dockerApiVersion": "[parameters('vmSettings').dockerApiVersion]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('signerVmName'),'-',copyIndex(1))]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[variables('signer_nodes_Count')]"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',variables('availabilitySetsName'))]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('signerVmSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('publisher')]",
                        "offer": "[variables('offer')]",
                        "sku": "[variables('sku')]",
                        "version": "[variables('version')]"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(variables('signerVmName'),'-',copyIndex(1),'-',variables('suffix'),'-osDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageAccountType')]"
                        },
                        "diskSizeGB": "[variables('diskSizeGB')]"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(variables('signerVmName'),'-',copyIndex(1))]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('signerNicName'),'-',copyIndex(1)))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "DockerExtension",
                    "apiVersion": "[variables('dockerApiVersion')]",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', variables('signerVmName'),'-',copyIndex(1))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "DockerExtension",
                        "typeHandlerVersion": "1.1",
                        "autoUpgradeMinorVersion": true,
                        "settings": {},
                        "protectedSettings": {}
                    }
                }
            ]
        }
    ]
}
