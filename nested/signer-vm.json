{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmSettings": {
            "type": "object"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "suffix": "[concat(parameters('vmSettings').suffix)]",
        "apiVersion": "[concat(parameters('vmSettings').apiVersion)]",
        "availabilitySetsName": "[concat(parameters('vmSettings').availabilitySetsName)]",
        "nicName": "[concat(parameters('vmSettings').nicName)]",
        "vmName": "[concat(parameters('vmSettings').vmName)]",
        "nodeCount": "[parameters('vmSettings').nodeCount]",
        "adminUsername": "[parameters('vmSettings').adminUsername]",
        "adminPassword": "[parameters('vmSettings').adminPassword]",
        "vmSize": "[parameters('vmSettings').vmSize]",
        "storageAccountType": "[parameters('vmSettings').storageAccountType]",
        "publisher": "[parameters('vmSettings').publisher]",
        "offer": "[parameters('vmSettings').offer]",
        "sku": "[parameters('vmSettings').sku]",
        "version": "[parameters('vmSettings').version]",
        "diskSizeGB": "[parameters('vmSettings').diskSizeGB]",
        "dockerApiVersion": "[parameters('vmSettings').dockerApiVersion]",
        "passwordOrSshKey": "[parameters('vmSettings').passwordOrSshKey]",
        "sshPublicKey": "[parameters('vmSettings').sshPublicKey]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('vmName'),'-',copyIndex(1),'-',parameters('location'))]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[parameters('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[variables('nodeCount')]"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',concat(variables('availabilitySetsName'),'-',parameters('location')))]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('publisher')]",
                        "offer": "[variables('offer')]",
                        "sku": "[variables('sku')]",
                        "version": "[variables('version')]"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(variables('vmName'),'-',copyIndex(1),'-',parameters('location'),'-',variables('suffix'),'-osDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageAccountType')]"
                        },
                        "diskSizeGB": "[variables('diskSizeGB')]"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(variables('vmName'),'-',copyIndex(1))]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nicName'),'-',copyIndex(1),'-',parameters('location')))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "DockerExtension",
                    "apiVersion": "[variables('dockerApiVersion')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'),'-',copyIndex(1),'-',parameters('location'))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "DockerExtension",
                        "typeHandlerVersion": "1.1",
                        "autoUpgradeMinorVersion": true,
                        "settings": {},
                        "protectedSettings": {}
                    }
                }
            ]
        }
    ]
}
