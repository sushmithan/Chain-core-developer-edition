{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "pipSettings": {
            "type": "object"
        }
    },
    "variables": {
        "generatorLbIpName": "[parameters('pipSettings').generatorLbIpName]",
        "lbPipDns": "[parameters('pipSettings').lbPipDns]",
        "location": "[parameters('pipSettings').location]",
        "signerVMIpName": "[parameters('pipSettings').signerVMIpName]",
        "signer_nodes_Count": "[parameters('pipSettings').signer_nodes_Count]",
        "signerPipDns": "[parameters('pipSettings').signerPipDns]",
        "gatewayPipDns":"[parameters('pipSettings').gatewayPipDns]",
        "apiVersion": "[parameters('pipSettings').apiVersion]",
        "publicIPAllocationMethod": "[parameters('pipSettings').publicIPAllocationMethod]",
        "gatewayIpName":"[parameters('pipSettings').gatewayIpName]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('generatorLbIpName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "[variables('publicIPAllocationMethod')]",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[variables('lbPipDns')]"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('gatewayIpName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[variables('gatewayPipDns')]"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(variables('signerVMIpName'),'-',copyIndex(1))]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[variables('signer_nodes_Count')]"
            },
            "properties": {
                "publicIPAllocationMethod": "[variables('publicIPAllocationMethod')]",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('signerPipDns'),'-',copyIndex(1))]"
                }
            },
            "dependsOn": []
        }
    ]
}