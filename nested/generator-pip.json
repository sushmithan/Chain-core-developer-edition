{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "genPipSettings": {
            "type": "object"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "generatorIpName": "[parameters('genPipSettings').generatorIpName]",
        "pipDns": "[parameters('genPipSettings').pipDns]",
        "location": "[parameters('location')]",
        "apiVersion": "[parameters('genPipSettings').apiVersion]",
        "publicIPAllocationMethod": "[parameters('genPipSettings').publicIPAllocationMethod]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('generatorIpName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "[variables('publicIPAllocationMethod')]",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[variables('pipDns')]"
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "generatorIp": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('generatorIpName'))).dnsSettings.fqdn]"
        }
    }
}