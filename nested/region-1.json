            "signerVmSize": "[parameters('signerVmSize')]",
            "storageAccountType": "[variables('vmSizesMap')[parameters('signerVmSize')].storageAccountType]"
        },
        "generatorVMsettings": {
            "suffix": "[variables('suffix')]",
            "location": "[parameters('location')]",
            "generatorNicName": "[concat(variables('prefix'),'-nic')]",
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
