                    "uri": "[variables('vnetGatewaySetupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetGatewaySettings": {
                        "value": "[variables('vnetGatewaySettings')]"
                    }
                }
            }
