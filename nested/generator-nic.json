{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "generatorNicSettings": {
            "type": "object"
        }
    },
    "variables": {
        "location": "[parameters('generatorNicSettings').location]",
        "generatorNicName": "[parameters('generatorNicSettings').generatorNicName]",
        "virtualNetworksName": "[parameters('generatorNicSettings').virtualNetworksName]",
        "generatorSubnetName": "[parameters('generatorNicSettings').generatorSubnetName]",
        "chainLoadBalancerName": "[parameters('generatorNicSettings').chainLoadBalancerName]",
        "generatorNsgName": "[parameters('generatorNicSettings').generatorNsgName]",
        "privateIPAllocationMethod": "[parameters('generatorNicSettings').privateIPAllocationMethod]",
        "apiVersion": "[parameters('generatorNicSettings').apiVersion]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('generatorNicName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "[variables('privateIPAllocationMethod')]",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworksName')), '/subnets/', variables('generatorSubnetName'))]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('chainLoadBalancerName')), '/backendAddressPools/lb-bkpool')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('chainLoadBalancerName')), '/inboundNatRules/ssh')]"
                                }
                            ]
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('generatorNsgName'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworksName'))]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('chainLoadBalancerName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('generatorNsgName'))]"
            ]
        }
    ]
}