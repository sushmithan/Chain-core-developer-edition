{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "basics",
                "type": "Microsoft.Common.Section",
                "label": "Basic configurations",
                "elements": [
                    {
                        "name": "adminUsername",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "User name",
                        "defaultValue": "blockuser",
                        "toolTip": "Admin username for the virtual machines. Same Credientials is to SSH to the box.",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z]{4,20}$",
                            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 4-20 characters long."
                        },
                        "osPlatform": "Linux",
                        "visible": true
                    },
                    {
                        "name": "adminPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "Admin User Password",
                        "constraints": {
                            "required": true,
                            "regex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{6,}$",
                            "validationMessage": "The password must contain at least 6 characters, with at least 1 letter and 1 number."
                        },
                        "options": {
                            "hideConfirmation": false
                        },
                        "visible": true
                    }
                ],
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "vmSize",
                "bladeTitle": "Choose Block VMs Size",
                "label": "Block VMs Size",
                "subLabel": {
                    "preValidation": "Required",
                    "postValidation": "Done"
                },
                "elements": [
                    {
                        "name": "generatorVmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Block Generator VM size",
                        "toolTip": "Block Generator VM size",
                        "recommendedSizes": [
                            "Standard_DS1_V2",
                            "Standard_DS2_V2",
                            "Standard_DS3_V2"
                        ],
                        "constraints": {
                            "allowedSizes": [
                                "Standard_DS4_V2",
                                "Standard_DS5_V2",
                                "Standard_DS11_V2",
                                "Standard_DS12_V2",
                                "Standard_DS13_V2",
                                "Standard_DS14_V2",
                                "Standard_DS15_V2",
                                "Standard_DS1",
                                "Standard_DS2",
                                "Standard_DS3",
                                "Standard_DS4",
                                "Standard_DS11",
                                "Standard_DS12",
                                "Standard_DS13",
                                "Standard_DS14",
                                "Standard_F1S",
                                "Standard_F2S",
                                "Standard_F4S",
                                "Standard_F8S",
                                "Standard_F16S"
                            ]
                        },
                        "osPlatform": "Linux",
                        "imageReference": {
                            "publisher": "Canonical",
                            "offer": "UbuntuServer",
                            "sku": "16.04-LTS"
                        },
                        "visible": true
                    },
                    {
                        "name": "signerVmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Block Signer VM size",
                        "toolTip": "Block Signer VM size",
                        "recommendedSizes": [
                            "Standard_DS1_V2",
                            "Standard_DS2_V2",
                            "Standard_DS3_V2"
                        ],
                        "constraints": {
                            "allowedSizes": [
                                "Standard_DS4_V2",
                                "Standard_DS5_V2",
                                "Standard_DS11_V2",
                                "Standard_DS12_V2",
                                "Standard_DS13_V2",
                                "Standard_DS14_V2",
                                "Standard_DS15_V2",
                                "Standard_DS1",
                                "Standard_DS2",
                                "Standard_DS3",
                                "Standard_DS4",
                                "Standard_DS11",
                                "Standard_DS12",
                                "Standard_DS13",
                                "Standard_DS14",
                                "Standard_F1S",
                                "Standard_F2S",
                                "Standard_F4S",
                                "Standard_F8S",
                                "Standard_F16S"
                            ]
                        },
                        "osPlatform": "Linux",
                        "imageReference": {
                            "publisher": "Canonical",
                            "offer": "UbuntuServer",
                            "sku": "16.04-LTS"
                        },
                        "visible": true,
                        "count": "[steps('vmSize').signerVmCount]"
                    },
                    {
                        "name": "signerVmCount",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Number of Block Signer VMs",
                        "toolTip": "Number of Block Signer VMs in the Blockchain network",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "1",
                                    "value": "1"
                                },
                                {
                                    "label": "2",
                                    "value": "2"
                                },
                                {
                                    "label": "3",
                                    "value": "3"
                                },
                                {
                                    "label": "4",
                                    "value": "4"
                                },
                                {
                                    "label": "5",
                                    "value": "5"
                                },
                                {
                                    "label": "6",
                                    "value": "6"
                                },
                                {
                                    "label": "7",
                                    "value": "7"
                                },
                                {
                                    "label": "8",
                                    "value": "8"
                                },
                                {
                                    "label": "9",
                                    "value": "9"
                                }
                            ]
                        },
                        "visible": true
                    },
                    {
                        "name": "managedDiskType",
                        "type": "Microsoft.Common.Section",
                        "label": "Storage settings",
                        "elements": [
                            {
                                "name": "mngDiskType",
                                "type": "Microsoft.Common.DropDown",
                                "label": "Managed storage type",
                                "toolTip": "Managed Storage Type for managed OS disks",
                                "defaultValue": "Standard_LRS",
                                "constraints": {
                                    "required": true,
                                    "allowedValues": [
                                        {
                                            "label": "Standard_LRS",
                                            "value": "Standard_LRS"
                                        },
                                        {
                                            "label": "Premium_LRS",
                                            "value": "Premium_LRS"
                                        }
                                    ]
                                },
                                "visible": true
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "keyVaultSet",
                "label": "Key Vault Settings",
                "bladeTitle": "Key Vault Configure",
                "subLabel": {
                    "preValidation": "Required",
                    "postValidation": "Done"
                },
                "elements": [
                    {
                        "name": "objId",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Object ID",
                        "toolTip": "Object ID for new Key Vault Owner",
                        "constraints": {
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "srvPri",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Service principal",
                        "toolTip": "Service Principal of your Microsoft Azure Account",
                        "constraints": {
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "secretKey",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Shared secret key",
                        "toolTip": "Shared secret key of your Service Principal",
                        "constraints": {
                            "required": true
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "location":"[location()]",
            "generatorVmSize":"[steps('vmSize').generatorVmSize]",
            "signerVmSize":"[steps('vmSize').signerVmSize]",
            "signer_nodes_Count":"[steps('vmSize').signerVmCount]",
            "adminUsername":"[basics('basics').adminUsername]",
            "adminPassword":"[basics('basics').adminPassword]",
            "objectId":"[steps('keyVaultSet').objId]",
            "servicePrinciple": "[steps('keyVaultSet').srvPri]",
            "secretKey":"[steps('keyVaultSet').secretKey]",
            "storageAccountType": "[steps('vmSize').managedDiskType.mngDiskType]"
        }
    }
}