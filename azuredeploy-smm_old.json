            "defaultValue": "d9bcf141-62ad-46b1-a22f-fd0b6e2c39a1"
        },
        "VPNSharedKey": {
            "type": "string",
            "defaultValue": "Ashpassword123"
        }
    },
    "variables": {
        "baseUrl": "https://raw.githubusercontent.com/sysgain/Chain-core-developer-edition/chain-core-dev",
        "region-1-setupURL": "[concat(variables('baseUrl'),'/nested/region-1.json')]",
        "region-2-setupURL": "[concat(variables('baseUrl'),'/nested/region-2.json')]",
        "region-3-setupURL": "[concat(variables('baseUrl'),'/nested/region-3.json')]",
        "region-4-setupURL": "[concat(variables('baseUrl'),'/nested/region-4.json')]",
        "region-5-setupURL": "[concat(variables('baseUrl'),'/nested/region-5.json')]",
        "gateways-connection-setupURL":"[concat(variables('baseUrl'),'/nested/connections.json')]",
        
        "connectionSettings":{
            "gatewayNameReg1": "Chain-reg1-gateway",
            "gatewayNameReg2": "Chain-reg2-gateway",
            "gatewayNameReg3": "Chain-reg3-gateway",
            "gatewayNameReg4": "Chain-reg4-gateway",
            "gatewayNameReg5": "Chain-reg5-gateway",
            "VPNSharedKey": "[parameters('VPNSharedKey')]",
            "location_1":"[parameters('location_1')]",
            "location_2":"[parameters('location_2')]",
            "location_3":"[parameters('location_3')]",
            "location_4":"[parameters('location_4')]",
            "location_5":"[parameters('location_5')]"
        }
    },
    "resources": [
        {
            "name": "region-1-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-1-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "objectId1": {
                        "value": "[parameters('objectId1')]"
                    },
                    "objectId2": {
                        "value": "[parameters('objectId2')]"
                    },
                    "location": {
                        "value": "[parameters('location_1')]"
                    },
                    "generatorVmSize":{
                        "value":"[parameters('generatorVmSize')]"
                    },
                    "signerVmSize":{
                        "value":"[parameters('signerVmSize')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('connectionSettings').gatewayNameReg1]"
